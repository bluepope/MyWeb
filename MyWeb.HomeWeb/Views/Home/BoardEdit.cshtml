@using System.Security.Claims
@model BoardModel

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <form id="form1" method="post" action="/home/BoardEdit_Input">
                            @Html.Hidden("idx", Model.Idx)
                            <table class="table table-bordered no-wrap">
                                <colgroup>
                                    <col style="width:100px" />
                                    <col style="width:auto" />
                                </colgroup>
                                <tbody>
                                    <tr>
                                        <th>제목</th>
                                        <td>@Html.TextBox("title", Model.Title, new { @class = "form-control" })</td>
                                    </tr>
                                    <tr>
                                        <th>내용</th>
                                        <td>@Html.TextArea("contents", Model.Contents)</td>
                                    </tr>
                                    <tr>
                                        <th>작성자</th>
                                        <td>@Model.Reg_Username (@Model.Reg_Date.ToString("yyyy-MM-dd"))</td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>

                    <div class="text-right">
                        <button id="btn1" class="btn btn-sm btn-primary">저장</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#form1 textarea[name=contents]").summernote();

        $("#btn1").click(function () {
            var code = $("#form1 textarea[name=contents]").summernote("code");

            $("#form1 textarea[name=contents]").val(code);

            $("#form1").submit();
        });
    </script>